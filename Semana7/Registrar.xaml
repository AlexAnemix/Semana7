<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Registrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="RESGISTRO"/>
            
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contrasenia"/>
            <Button x:Name="bntAgregar" Text="Agregar" Clicked="bntAgregar_Clicked" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>